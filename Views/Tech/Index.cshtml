@model IEnumerable<Complaint>
@{
    ViewData["Title"] = "Index";
}

<div class="col-6">
    <h1>Complaints</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Id)
            </th>
            <th>
                Issuer
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Title)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.Status)
            </th>

            <th>Actions</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.User.Email</td>
                <td>@item.Title</td>
                <td>@item.Status</td>
                <td>
                    <a asp-controller="Tech" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-controller="Tech" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                </td>
            </tr>
        }


        </tbody>
    </table>
</div>